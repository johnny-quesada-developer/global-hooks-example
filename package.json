{
  "name": "global-hooks-example",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://johnny-quesada-developer.github.io/global-hooks-example/",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "easy-css-merge": "^1.1.0",
    "json-storage-formatter": "^2.0.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-global-state-hooks": "^9.2.2"
  },
  "devDependencies": {
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.38.0",
    "eslint-plugin-custom-rules": "link:./eslint-plugin-custom-rules",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "gh-pages": "^6.1.0",
    "postcss": "^8.4.32",
    "sass": "^1.85.1",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.0.2",
    "vite": "^4.3.9"
  },
  "eslintConfig": {
    "rules": {
      "react-hooks/exhaustive-deps": [
        "warn",
        {
          "additionalHooks": "(useClickOutSide)",
          "include": [
            "isEnable",
            "element"
          ]
        }
      ]
    }
  }
}
